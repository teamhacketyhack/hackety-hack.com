- content_for :head do
  - if @support
    = auto_discovery_link_tag :atom, support_questions_url(format: :atom)
  - else
    = auto_discovery_link_tag :atom, questions_url(format: :atom)

- content_for :title do
  -if @support
    Support Questions
  -else
    Questions

- content_for :sidebar do
  = render :partial => "shared/ask"
  - if @support
    = render :partial => "shared/questions_blurb"
  - else
    = render :partial => "shared/support_blurb"

- content_for :feed do
  - if @support
    = link_to "Feed", support_questions_url(format: :atom)
  - else
    = link_to "Feed", questions_url(format: :atom)
%h1 Questions List
%p
  %a.btn{:href => "#?filtered=1"} Unanswered 
  %a.btn{:href => "#?filtered=1"} Answered 
  
%table
  %tr
    %th Questions
    %th
    %th
    %th
  - @questions.each do |question|
    %tr
      %td= question.description
      %td= link_to 'Show', question
      %td= link_to 'Edit', edit_question_path(question)
      %td= link_to 'Destroy', question, confirm: 'Are you sure?', method: :delete
%br/
%ul.questions
  = render :partial => "list", :collection => collection

= will_paginate
